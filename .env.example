# Environment variables for EchoDesk multi-tenant setup
DEBUG=True
SECRET_KEY=your-secret-key-here-change-this-in-production

# Database Configuration (PostgreSQL required for multi-tenancy)
DB_NAME=echodesk_dba
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_HOST=localhost
DB_PORT=5432

# Domain configuration
MAIN_DOMAIN=echodesk.ge

# CORS Settings (for frontend development)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Facebook Integration Settings
FACEBOOK_APP_ID=your-facebook-app-id-here
FACEBOOK_APP_SECRET=your-facebook-app-secret-here
FACEBOOK_APP_VERSION=v23.0
FACEBOOK_WEBHOOK_VERIFY_TOKEN=echodesk_webhook_token_2024

# Instagram Integration Settings (uses Facebook API)
INSTAGRAM_WEBHOOK_VERIFY_TOKEN=echodesk_instagram_webhook_token_2024

# Email Settings (for future use)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
